<% layout('layouts/boilerplate') %>
    <div id='map' style='width: 100%; height: 500px;'></div>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Create New Camp</a>
    </div>

    <% for(let campground of campgrounds){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(campground.images.length){ %>
                        <img class="img-fluid" alt="" src="<%=campground.images[0].url%>" crossorigin>
                        <% }else{ %>
                            <img class="img-fluid" alt=""
                                src="https://www.trinityp3.com/wp-content//uploads/2014/05/Empty_Vessels_Make_The_Most_Noise.jpg" crossorigin>
                            <%}%>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=campground.title%>
                        </h5>
                        <p class="card-text">
                            <%=campground.description%>
                        </p>
                        <p class="text-muted">
                            <%=campground.location%>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View <%=campground.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <script>
                const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
                const campgrounds = {features:<%-JSON.stringify(campgrounds)%>}
            </script>
            <script src="/javascripts/clusterMap.js"></script>